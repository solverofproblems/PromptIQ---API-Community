{
  "manifest_version": 3,
  "name": "PromptIQ - Versão Gratuita",
  "version": "1.0.0",
  "description": "Análise completa de prompts para IA com IA - Versão gratuita",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "PromptIQ - Versão Gratuita"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js", "floating-window.js"],
      "run_at": "document_end"
    }
  ]
}
